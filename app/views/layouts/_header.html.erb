<header class="navbar navbar-fixed-top navbar-inverse">
	<div class="coffee-logo">
		<%= link_to root_path do %>
			<i class="fa fa-coffee fa-3x"></i>
			<span>CoffeeShop</span>	
		<% end %>
	</div>
	<% if logged_in? %>
		<ul>
			<li><%= link_to "Users", '#' %></li>
			<li><%= link_to "Locations", '#' %></li>
			<li><%= link_to "Coffee Shops", '#' %></li>
			<li id="fat-menu" class="dropdown">
				<a href="#" class="dropdown-toggle" data-toggle="dropdown"> Account <b class="caret"></b>
				</a>
				<ul class="dropdown-menu">
					<li><%= link_to "View Profile", current_user %></li>
					<li><%= link_to "Edit Settings", edit_user_path(current_user) %></li>
					<li class="divider"></li>
					<li>
						<%= link_to "Log out", logout_path, method: "delete" %>
					</li>
				</ul>
			</li>
		</ul>
	<% else %>	
		<div class="header-right">
		<button class="btn btn-primary">	
			<%= link_to "Log In", login_path %>
		</button>
	<% end %>
		</div>
</header>
