<aside class="span8 liked-shops">
	<h2><%= @user.name %>'s Liked Shops </h2>
	<table>
		<thead>
			<tr>
				<th class="first-heading">Coffee Shop</th>
				<th>Address</th>
			</tr>
		</thead>

		<tbody>
	<% if current_user.shops.blank? %>
		<tr>
			<td class="name"> 
				I'm looking empty....
			</td>
			<td class="address"> 
				Go to the Neighborhoods Page and find a coffee shop!
			</td>
		</tr>
	<% else %>			
		<% @shops.each do |shop| %>
			<tr>
				<td class="name">
					<%= shop.name %>
				</td>
				<td class="address"> 
					<%= shop.address %>
				</td>
			</tr>
		<% end %>
		</tbody>
	<% end %>
	</table>
</aside>
